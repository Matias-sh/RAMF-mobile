<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/card_shadow_strong" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    <!-- Main card -->
    <item android:top="0dp" android:left="0dp" android:right="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/card_solid_white" />
            <corners android:radius="24dp" />
        </shape>
    </item>
</layer-list>