<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Primera fila: Humedad y Punto de rocío -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- Humedad Relativa - ALTA LEGIBILIDAD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                style="@style/Widget.App.CardView.Data"
                android:background="@drawable/card_data_item">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="@drawable/card_data_item">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_humedad_relativa"
                        android:layout_marginBottom="8dp"
                        app:tint="@color/rainy_blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Humedad Relativa"
                        android:textAppearance="@style/TextAppearance.Weather.Caption.Dark"
                        android:textAlignment="center"
                        android:textColor="@color/text_secondary_gray"
                        android:textSize="11sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/humidityTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-----"
                        android:textAppearance="@style/TextAppearance.Weather.Title.Dark"
                        android:textColor="@color/text_primary_dark"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Punto de rocío - ALTA LEGIBILIDAD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                style="@style/Widget.App.CardView.Data"
                android:background="@drawable/card_data_item">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="@drawable/card_data_item">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_punto_rocio"
                        android:layout_marginBottom="8dp"
                        app:tint="@color/info_blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Punto de rocío"
                        android:textAppearance="@style/TextAppearance.Weather.Caption.Dark"
                        android:textAlignment="center"
                        android:textColor="@color/text_secondary_gray"
                        android:textSize="11sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/dewPointTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-----"
                        android:textAppearance="@style/TextAppearance.Weather.Title.Dark"
                        android:textColor="@color/text_primary_dark"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Segunda fila: Presión y Radiación -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- Presión del aire -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                style="@style/Widget.App.CardView.Data"
                android:background="@drawable/card_data_item">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="@drawable/card_data_item">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_presion_aire"
                        android:layout_marginBottom="8dp"
                        app:tint="@color/warning_orange" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Presión del aire"
                        android:textAppearance="@style/TextAppearance.Weather.Caption.Dark"
                        android:textAlignment="center"
                        android:textColor="@color/text_secondary_gray"
                        android:textSize="11sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/airPressureTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-----"
                        android:textAppearance="@style/TextAppearance.Weather.Title.Dark"
                        android:textColor="@color/text_primary_dark"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Radiación solar -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                style="@style/Widget.App.CardView.Data"
                android:background="@drawable/card_data_item">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="@drawable/card_data_item">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_radiacion_solar"
                        android:layout_marginBottom="8dp"
                        app:tint="@color/sunny_yellow" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Radiación solar"
                        android:textAppearance="@style/TextAppearance.Weather.Caption.Dark"
                        android:textAlignment="center"
                        android:textColor="@color/text_secondary_gray"
                        android:textSize="11sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/solarRadiationTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-----"
                        android:textAppearance="@style/TextAppearance.Weather.Title.Dark"
                        android:textColor="@color/text_primary_dark"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Tercera fila: Dirección y Velocidad del viento -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- Dirección del viento -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                style="@style/Widget.App.CardView.Data"
                android:background="@drawable/card_data_item">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="@drawable/card_data_item">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_direccion_viento"
                        android:layout_marginBottom="8dp"
                        app:tint="@color/wind_teal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dirección del viento"
                        android:textAppearance="@style/TextAppearance.Weather.Caption.Dark"
                        android:textAlignment="center"
                        android:textColor="@color/text_secondary_gray"
                        android:textSize="11sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/windDirectionTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-----"
                        android:textAppearance="@style/TextAppearance.Weather.Title.Dark"
                        android:textColor="@color/text_primary_dark"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Velocidad del viento -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                style="@style/Widget.App.CardView.Data"
                android:background="@drawable/card_data_item">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="@drawable/card_data_item">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_viento"
                        android:layout_marginBottom="8dp"
                        app:tint="@color/wind_teal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Velocidad del viento"
                        android:textAppearance="@style/TextAppearance.Weather.Caption.Dark"
                        android:textAlignment="center"
                        android:textColor="@color/text_secondary_gray"
                        android:textSize="11sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/windSpeedTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-----"
                        android:textAppearance="@style/TextAppearance.Weather.Title.Dark"
                        android:textColor="@color/text_primary_dark"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Cuarta fila: Ráfaga de viento (card ancho) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="16dp"
            style="@style/Widget.App.CardView.Data"
            android:background="@drawable/card_data_item">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:background="@drawable/card_data_item">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_viento"
                    android:layout_marginEnd="16dp"
                    app:tint="@color/success_green" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ráfaga de viento"
                        android:textAppearance="@style/TextAppearance.Weather.Subtitle.Dark"
                        android:textColor="@color/text_secondary_gray"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/windGustTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-----"
                        android:textAppearance="@style/TextAppearance.Weather.Title.Dark"
                        android:textColor="@color/text_primary_dark"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Sección de Precipitación con TITULO VISIBLE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRECIPITACIÓN"
            android:textAppearance="@style/TextAppearance.Weather.Title.Dark"
            android:textColor="@color/formosa_blue_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="4dp"
            android:letterSpacing="0.1" />

        <!-- Quinta y sexta fila: Precipitación en grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2">

            <!-- Precipitación 1hr -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                style="@style/Widget.App.CardView.Data"
                android:background="@drawable/card_data_item">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="@drawable/card_data_item">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_precipitacion"
                        android:layout_marginBottom="8dp"
                        app:tint="@color/rainy_blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Precipitación 1hr"
                        android:textAppearance="@style/TextAppearance.Weather.Caption.Dark"
                        android:textAlignment="center"
                        android:textColor="@color/text_secondary_gray"
                        android:textSize="11sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/rainLast1hTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-----"
                        android:textAppearance="@style/TextAppearance.Weather.Title.Dark"
                        android:textColor="@color/text_primary_dark"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Precipitación 24hr -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                style="@style/Widget.App.CardView.Data"
                android:background="@drawable/card_data_item">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="@drawable/card_data_item">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_precipitacion"
                        android:layout_marginBottom="8dp"
                        app:tint="@color/rainy_blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Precipitación 24hr"
                        android:textAppearance="@style/TextAppearance.Weather.Caption.Dark"
                        android:textAlignment="center"
                        android:textColor="@color/text_secondary_gray"
                        android:textSize="11sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/rainLast24hTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-----"
                        android:textAppearance="@style/TextAppearance.Weather.Title.Dark"
                        android:textColor="@color/text_primary_dark"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Precipitación 48hr -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                style="@style/Widget.App.CardView.Data"
                android:background="@drawable/card_data_item">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="@drawable/card_data_item">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_precipitacion"
                        android:layout_marginBottom="8dp"
                        app:tint="@color/rainy_blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Precipitación 48hr"
                        android:textAppearance="@style/TextAppearance.Weather.Caption.Dark"
                        android:textAlignment="center"
                        android:textColor="@color/text_secondary_gray"
                        android:textSize="11sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/rainLast48hTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-----"
                        android:textAppearance="@style/TextAppearance.Weather.Title.Dark"
                        android:textColor="@color/text_primary_dark"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Precipitación 7 días -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                style="@style/Widget.App.CardView.Data"
                android:background="@drawable/card_data_item">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="@drawable/card_data_item">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_precipitacion"
                        android:layout_marginBottom="8dp"
                        app:tint="@color/rainy_blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Precipitación 7 días"
                        android:textAppearance="@style/TextAppearance.Weather.Caption.Dark"
                        android:textAlignment="center"
                        android:textColor="@color/text_secondary_gray"
                        android:textSize="11sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/rainLast7dTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-----"
                        android:textAppearance="@style/TextAppearance.Weather.Title.Dark"
                        android:textColor="@color/text_primary_dark"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </GridLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>