<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Logo de Todos Unidos en la parte inferior -->
    <ImageView
        android:id="@+id/logoTodosUnidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:src="@drawable/logo_gob_todos_unidos_trans"
        app:tint="@color/black" />

    <!-- Espacio vacÃ­o para separar el logo del usuario -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <!-- Espacio para el nombre o detalles de usuario -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <!-- Imagen de perfil -->
        <ImageView
            android:id="@+id/navHeaderProfileImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_default_profile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/navHeaderUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Usuario"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/navHeaderDetailsUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detalles de usuario"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

        </LinearLayout>


    </LinearLayout>

    <!-- Espacio para otras opciones del header -->
    <!--
    <TextView
        android:id="@+id/navHeaderDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalles de usuario o cualquier cosa"
        android:textColor="@android:color/white"
        android:textSize="14sp"/>

     -->


</LinearLayout>
